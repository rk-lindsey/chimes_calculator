##############################################
### Variable definition - UPDATE as needed ###
##############################################

variable seed  	 equal 1111	# Random seed
variable iofrq   equal 1	# Output frequency: thermo and trajectory MUST use same value
variable nstep   equal 0	# Number of steps for simulation

##############################################
### General settings - LEAVE EXACTLY AS IS ###
##############################################

units           real        
newton          on     
atom_style      atomic      
atom_modify     sort 0 0.0 

neighbor        1.0 bin
neigh_modify    delay 0 every 1 check yes

##############################################
###             Initialization             ###
##############################################

read_data       "configurations/HN3.2gcc_3000K.OUTCAR_#000.in.data"

##############################################
###   Model definition - UPDATE as needed  ###
##############################################

pair_style	chimesFF
pair_coeff	* * ../../../../serial_interface/tests/force_fields/published_params.HN3.2+3+4b.Tersoff.special.offsets.txt

##############################################
###        Specify dyanmics                ###
##############################################

thermo_style    custom step time atoms ke pe etotal temp press pxx pyy pzz pxy pxz pyz vol
thermo_modify   line one format float %20.5f flush yes
thermo          ${iofrq}

dump            1 all custom ${iofrq} traj.lammpstrj element xu yu zu fx fy fz
dump_modify     1 sort id element H N

run             ${nstep}
